<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Scroll para que los campos no se corten en pantallas pequeñas -->
    <ScrollView
        android:id="@+id/scrollForm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Campos de entrada -->
            <EditText
                android:id="@+id/etCodigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Código de reserva"/>

            <EditText
                android:id="@+id/etCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cliente"/>

            <EditText
                android:id="@+id/etFechaEntrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha Entrada"/>

            <EditText
                android:id="@+id/etFechaSalida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha Salida"/>

            <EditText
                android:id="@+id/etPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio"/>

            <Spinner
                android:id="@+id/spTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/spHabitacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Switch
                android:id="@+id/swDesayuno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incluye Desayuno"/>

            <EditText
                android:id="@+id/etHuespedes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número de huéspedes"/>

            <!-- Botón guardar -->
            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
